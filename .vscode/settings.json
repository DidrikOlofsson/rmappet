{
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },
  "python.formatting.provider": "black",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.nextflow*": true
  },
  "files.associations": {
    "*.config": "nextflow"
  }
}
